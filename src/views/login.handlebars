<section class="loginBody">
    <style>
        .loginBody {
            background-image: url('/assets/images/fondo.jpg');
            background-size: cover;
            background-position: center center;
            background-repeat: no-repeat;
            height: 100vh;
        }
    </style>

    <div class=" col-lg-6  d-flex flex-column align-items-end vh-100">
        <div class="align-self-center w-100 px-lg-5 py-lg-4 p-4">
            <h1 class="font-weight-bold mb-4 text-light fs-3">Bienvenido a LibreriaLea!</h1>
            <div class="mb-5">
                <div class="mb-4 text-light">
                    <label for="InputEmail" class="form-label font-weight-bold">Email</label>
                    <input type="email" class="text-light form-control bg-dark-x border-0 inputPlaceholder"
                        id="loginEmail" placeholder="Ingresa tu email" aria-describedby="emailHelp" name="email">
                </div>
                <div class="mb-4 text-light">
                    <label for="InputPassword" class="form-label font-weight-bold ">Contraseña</label>
                    <input type="password" class="text-light form-control bg-dark-x border-0 mb-2 inputPlaceholder"
                        placeholder="Ingresa tu contraseña" id="loginPassword" name="password">
                    <a href="" id="emailHelp" class="form-text text-muted text-decoration-none text-light"
                        data-bs-toggle="modal" data-bs-target="#RecoveryPassBackdrop">¿Has olvidado tu
                        contraseña?</a>
                </div>
                <div id="loginError"></div>
                <button onclick="login()" class="btn btn-primary w-100" id="btnLogin">Iniciar sesión</button>
            </div>

            <p class="font-weight-bold text-center text-muted text-light">O inicia sesión con</p>
            <div class="d-flex justify-content-center align-item-center m-0">
                <button type="button" class="btn btn-outline-light flex-grow-1 mx-2" disabled hidden><i
                        class="fab fa-google lead"></i> Google</button>
                <button type="button" class="btn btn-outline-light flex-grow-1 mx-2" disabled hidden><i
                        class="fab fa-facebook-f lead"></i> Facebook</button>
                <div>
                    <a href="api/sessions/github">
                        <button type="button" class="btn btn-outline-light flex-grow-1 mx-2" id="btnGitHub">
                            <i class="fab fa-github"></i> GitHub</button>
                    </a>
                </div>
            </div>
        </div>
        <div class="text-center px-lg-5 pt-lg-3 pb-lg-4 p-4 mt-auto w-100 d-flex flex-column">
            <p class="d-inline-block mb-0 text-light">¿Todavia no tienes una cuenta?</p>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                Crea una ahora
            </button>
        </div>
        <!-- Modal restablecer contraseña-->
        <div class="modal fade" id="RecoveryPassBackdrop" data-bs-backdrop="static" data-bs-keyboard="false"
            tabindex="-1" aria-labelledby="RecoveryPassBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="RecoveryPassBackdropLabel">Restablecer Contraseña</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action='/email/restorepassword' method='post'>
                            <div class='row'>
                                <div class='col-12'>
                                    <label for="email2">Correo Electrónico:</label>
                                    <input type='email' class='form-control font-weight-bold bg-light'
                                        placeholder='cosme_fulanito@gmail.com' aria-label='Correo' name='email'
                                        required />
                                </div>
                                <div class="col-12 alert alert-primary m-0 p-2 d-flex justify-self-center align-item-center"
                                    role="alert">
                                    <p class="m-0 fst-italic text-center">Se enviara un link al correo indicado para
                                        restablecer la contraseña</p>
                                </div>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                <button type="submit" class="btn btn-primary" id="btnLinkPass">Enviar link</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal con formilario de registro -->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
            aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="staticBackdropLabel">Registrese</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <form action='/api/users/' method='post'>
                            <div class='row'>
                                <div class='col-12'>
                                    <label for="first_name">Nombre:</label>
                                    <input type='text' class='form-control font-weight-bold bg-light'
                                        placeholder='Cosme' aria-label='Nombre' name='first_name' id="first_name"
                                        required />
                                </div>
                                <div class='col-12'>
                                    <label for="last_name">Apellido:</label>
                                    <input type='text' class='form-control font-weight-bold bg-light'
                                        placeholder='Fulanito' aria-label='Apellido' name='last_name' id="last_name"
                                        required />
                                </div>
                                <div class='col-12'>
                                    <label for="email">Correo Electrónico:</label>
                                    <input type='email' class='form-control font-weight-bold bg-light'
                                        placeholder='cosme_fulanito@gmail.com' aria-label='Correo' name='email'
                                        id="email" required />
                                </div>
                                <div class='col-12'>
                                    <label for="password">Contraseña:</label>
                                    <input type='password' class='form-control font-weight-bold bg-light'
                                        placeholder='Contraseña' aria-label='Contraseña' name='password' id="password"
                                        required />
                                </div>
                                <div class='col-12'>
                                    <label for="age">Edad:</label>
                                    <input type='text' class='form-control font-weight-bold bg-light' placeholder='Edad'
                                        aria-label='Edad' name='age' id="age" required />
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                                <button type="submit" class="btn btn-primary" id="btnRegistrar">Registrar</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>


</section>


</style>
<script src="/js/login.js"></script>