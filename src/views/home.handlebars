<h1 class="text-center">Lista de productos asincronos</h1>

<div>
    <div style="display:flex; flex-wrap: wrap; justify-content: center; ">
        {{#each products}}
        {{#if status}}
        <div class="card" style="margin: 10px 80px">
            <img src={{thumbnail}} width="200px" alt="img - {{thumbnail}}">
            <div class="card-body">
                <p class="card-title">{{category}} - {{title}}</p>
                <p class="card-text">{{description}}</p>
                <a href="./detail/{{{this._id}}}" class="btn btn-primary">Info</a>
            </div>
        </div>
        {{/if}}
        {{/each}}
    </div>
</div>