<h1 class="text-center">List products</h1>

<br>

<div style="display: flex; justify-content: center; flex-direction: row">
    <form id="form">
        <div class="input-group input-group-sm">
            <span class="input-group-text" id="inputGroup-sizing-sm">Limit</span>
            <input type="number" class="form-control me-1" id="limit" value="{{result.limit}}">
            <span class="input-group-text ms-1" id="inputGroup-sizing-sm">Page</span>
            <input type="number" class="form-control" id="page" value="{{result.page}}">
        </div>
    </form>
</div>

<div style="display: flex; justify-content: center;" class="mt-2">
    <div style="width: 250px;">
        <select class="form-select form-select-sm mb-3" aria-label="Large select example" id="selectSort">
            <option selected>Select product order by price</option>
            <option value="undefined">Undefined</option>
            <option value="desc">Descending</option>
            <option value="asc">Ascending</option>
        </select>
    </div>
</div>

<div style="display: flex; justify-content: center;">
    <div style="width: 1200px;">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Image</th>
                    <th scope="col">Category</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                    <th scope="col">Price</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                {{#each result.payload}}
                </tr>
                <td><img src={{this.thumbnail}} alt="img - {{this.thumbnail}}" width="50px"></td>
                <td>{{this.category}}</td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>
                <td>{{this.stock}}</td>
                <td>
                    <div style="display: flex; justify-content: space-between;">
                        <a href="/productsList/detail/{{{this._id}}}" class="btn btn-primary">Detalles</a>
                        <button class="btn btn-success" onclick="addProduct('{{{this._id}}}')" role="button">Add to
                            cart</button>
                    </div>
                </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<div style="display: flex; justify-content: center;">
    <div>
        {{#if result.hasPrevPage}}
        <a href={{result.prevLink}}>previus</a>
        {{/if}}

        {{#if result.hasPrevPage}}
        <a href={{result.prevLink}}>{{result.prevPage}}</a>
        {{/if}}

        <a href={{result.nextLink}}>{{result.page}}</a>

        {{#if result.hasNextPage}}
        <a href={{result.nextLink}}>{{result.nextPage}}</a>
        {{/if}}

        {{#if result.hasNextPage}}
        <a href={{result.nextLink}}>next</a>
        {{/if}}
    </div>
</div>


